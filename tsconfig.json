{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vite-plugin-svgr/client", "vite/client", "node", "vitest/globals", "@thednp/color", "@thednp/color-picker", "@thednp/shorty"],
    "paths": {
      "~/*": ["./src/*"],
    }
  },
  "include": ["src", "test", "example", "vitest.config-ui.ts", "vitest.config.ts"],
  "exclude": ["node_modules", "dist", "example/dist", "experiments"]
}
