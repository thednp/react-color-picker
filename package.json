{
  "name": "@thednp/react-color-picker",
  "version": "0.0.12",
  "description": "ðŸŽ¨ Modern Color Picker for React",
  "keywords": [
    "react",
    "react-component",
    "color picker",
    "colorpicker"
  ],
  "homepage": "https://thednp.github.io/react-color-picker",
  "bugs": {
    "url": "https://github.com/thednp/react-color-picker/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thednp/react-color-picker.git"
  },
  "sideEffects": false,
  "type": "module",
  "source": "src/index.tsx",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": {
      "import": "./dist/index.css"
    }
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "scripts": {
    "pre-test": "pnpm clean-coverage",
    "test": "pnpm pre-test && vitest --config vitest.config.ts",
    "test-ui": "pnpm pre-test && vitest --config vitest.config-ui.ts",
    "clean-coverage": "rm -rf coverage .nyc_output",
    "start": "vite serve example",
    "dev": "vite serve example",
    "build": "tsup",
    "build:example": "pnpm lint && pnpm format && vite build example",
    "build:docs": "pnpm lint && pnpm format && vite build example --config example/vite.config.docs.ts",
    "badges": "npx -p dependency-version-badge update-badge react typescript eslint prettier vitest vite",
    "prepublishOnly": "pnpm up && pnpm format && pnpm lint && tsup && pnpm badges",
    "format": "prettier -w \"src/**/*.{js,ts,json,css,tsx,jsx}\" \"example/**/*.{js,ts,json,css,tsx,jsx}\"",
    "lint": "pnpm lint:types && pnpm lint:code",
    "lint:code": "eslint --max-warnings 0 src/**/*.{ts,tsx}",
    "lint:types": "tsc --noEmit",
    "fix:ts": "eslint src/**/*.{ts,tsx} --fix",
    "serve": "vite preview example"
  },
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.5.0",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.3.2",
    "@vitest/browser": "^2.1.2",
    "@vitest/coverage-istanbul": "^2.1.2",
    "@vitest/ui": "^2.1.2",
    "eslint": "^8.57.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.12",
    "playwright": "^1.47.2",
    "prettier": "^3.3.3",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vite-plugin-svgr": "^4.2.0",
    "vitest": "^2.1.2"
  },
  "dependencies": {
    "@thednp/color": "^1.0.11",
    "@thednp/color-picker": "^2.0.2",
    "@thednp/shorty": "^2.0.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "packageManager": "pnpm@8.6.12",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8.6.0"
  }
}
